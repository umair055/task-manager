
  <!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="stylesheets/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/c3d4e8b422.js" crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EMS</title>
</head>
<body>
  <%- include('layout') %>

      <form action="/basic/<%= employee._id %>" method="post">
        <div class="form-group">
          <label for="formGroupExampleInput">Name</label>
          <input type="text" class="form-control" id="formGroupExampleInput" name="name" value="<%= employee.name%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">CNIC</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" name="cnic" value="<%= employee.cnic%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Email</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" name="email" value="<%= employee.email%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Contact#</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" name="contact" value="<%= employee.contact%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Gender</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" name="gender" value="<%= employee.gender%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Salary</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" name="salary" value="<%= employee.salary%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Address</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" name="address" value="<%= employee.address%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">DOB</label>
          <input type="date" class="form-control" id="formGroupExampleInput2" name="dob" value="<%= employee.dob%>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Post</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" name="post" value="<%= employee.post%>">
        </div>
        <input type="submit" value="Submit" class="btn btn-dark">
      </form>
</body>
</html>
