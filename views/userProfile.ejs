<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/c3d4e8b422.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/userProfile.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('layout') %>
    <div class="picture col-sm">
        <img class="profilePic" src="/images/profile.webp" alt="profile picture">
    </div>
    <div class="description">
        <h1>Basic Info</h1>
        <p>Name: <%= employee.name%></p>
        <p>CNIC:<%= employee.cnic%></p>
        <p>Email: <%= employee.email%></p>
        <p>Contact:<%= employee.contact%></p>
        <p>Gender: <%= employee.gender%></p>
        <p>Salary: <%= employee.salary%> </p>
        <p>Address: <%= employee.address%></p>
        <p>DOB: <%= employee.dob%></p>
        <p>Post: <%= employee.post%></p>
         
        <% if(admin.role=="admin") { %>
        <a href="/basic/<%=employee._id %>">
            <button type="submit" class="btn btn-dark float-right">Edit</button>
        </a>
        <% } %>
    </div>
    <div class="JobDescription">
        <h1>Job Description</h1>
        <p><%= employee.jobdes%></p>
        <% if(admin.role=="admin") { %>
            <a href="/jobDes/<%=employee._id %>">
                <button type="submit" class="btn btn-dark float-right">Edit</button>
            </a>
            <% } %>
    </div>

</body>
</html>